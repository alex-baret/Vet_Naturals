{% assign section_image = section.settings.bannerimage| img_url: '800x' %}




<div class="row QS_ambassador_banner_row about-cover-bg" style="background-image: url({{section_image}});">
	
  
  <div class="col-md-12">
		<div class="container">
          <div class="row content_row">
			<div class="col-md-6 content_col">
              <div class="row">
				<div class="col-md-12 green_div_col">
                  <div class="green_div">{{ section.settings.tag | escape }}</div>
                </div>
                <div class="col-md-12">
                 <div class="QS_become_ambassador_head">{{ section.settings.heading | escape }}</div>
                  
                </div>
                <div class="col-md-12">
                    
                  	<div class="QS_become_ambassador_subhead">{{ section.settings.subheading | escape }}</div>

                
                </div>
                  <div class="col-md-12 QS_btn_col">
                    <a href="{{ section.settings.button_link | escape }}">   <div class="QS_become_ambassador_apply">{{ section.settings.button_label | escape }}</div></a>
                </div>
              </div>
            </div>
            <div class="col-md-7">
              
             </div>
  		</div>
      </div>
  	</div>
</div>

<style>
  .QS_btn_col
  {
    padding-top: 28px;
  }
  
  .QS_become_ambassador_apply
  {
    margin: auto;
    text-align: center;
    width: 100%;
    cursor: pointer;
    padding: 13px;
    background: linear-gradient(#f59517,#f1b52b);
    color: #fff;
    border-radius: 4px;
  }
  .QS_become_ambassador_subhead
  {
   text-align:center; 
    color: #fff;
  }
  .QS_become_ambassador_head
  {
    text-align:center;
    font-size: 42px;
    font-weight: 800;
    color: #fff;
    line-height: 48px;
    margin-top: 10px;
    margin-bottom: 20px;
  }
  
 
  .green_div_col
  {
    padding: 21px 22px 8px 22px;
    color: #fff;
  }
  .green_div
  {
    font-size: 14px;
    color: #fff;
    margin: auto;
    text-align: center;
    width: 71%;
    border: solid 2px #137327;
    padding: 6px;
    border-radius: 4px;
    margin: auto;
    font-family: 'Proxima Nova Lt';
    letter-spacing: 1.2px;
  }
  .content_col
  {
   	background: rgb(25, 30, 35, 0.6) ; 
    color: #fff;
    border-radius: 6px;
   	height: auto;
    width: 100%;
    max-width: 560px;
    min-height: 370px;
    padding-bottom: 15px;
  }
  .QS_ambassador_banner_row
  {
    padding-top: 80px;
    padding-bottom: 120px;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .main-content
  {
   padding-top:0px; 
  }
  .content_row
  {
   padding-top:60px; 
  }
  .about-cover-bg {
  background-position: center;
  }
  
</style>

{% schema %}
  {
    "name": "About Hero",
    "settings": [
 {
          "type": "image_picker",
          "id": "bannerimage",
          "label": {
           
            "en": "Banner Image"
           
          }
        },
    {
          "type": "text",
          "id": "tag",
          "label": {
                   "en": "Tag"
              },
          "default": {
                   "en": "Title Here"
              }
        },
		{
          "type": "text",
          "id": "heading",
          "label": {
                   "en": "Heading"
              },
          "default": {
                   "en": "Another title here"
              }
        },
		{
          "type": "text",
          "id": "subheading",
          "label": {
                   "en": "Sub Heading"
              },
          "default": {
                   "en": "Description goes here" 
              }
        },
 		{
          "type": "text",
          "id": "button_label",
          "label": {
         
            "en": "Button label"
         
          },
		 "default": {
                   "en": "Button Title" 
              }
        },
        {
          "type": "url",
          "id": "button_link",
          "label": {
           
            "en": "Button link"
           
          }
        }

]
  }
{% endschema %}
