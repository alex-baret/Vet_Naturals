{% assign section_image = section.settings.image| img_url: '800x' %}
<div class="QS_ambassasdor_perks_image">
  <div class="page-width">
      <div class="row QS_ambassador_perks_parent">

        <div class="QS_aperks_row">
          <div class="col-md-8">
              <div class="row QS_ambassadorperks_section_points"> 
                  <div class="col-md-12 QS_ambassadorperks_section_points_head">
                      <h2 class="bold">{{section.settings.heading}}</h2>
                  </div>
                  <div class="col-md-12 QS_ambassador_section_points_line">
                      <h4>{{section.settings.description}}</h4>
                  </div>  
              </div> 
          </div>
          <div class="col-md-4 QS_ambassasdor_perks_image">
          </div>
        </div>

      </div>
  </div>
</div>
<style>
  #shopify-section-QS_ambassador_perks {
  	background-color: #f7efec;
  }
  .QS_aperks_row
  {  
  }
  .QS_ambassador_perks_parent
  { 
  }
  .QS_ambassasdor_perks_image
  {
    background-image: url({{section_image}});
    background-size: contain;
    background-repeat: no-repeat;
    background-position: right;
  }
  @media (max-width: 1189px) {
    .QS_ambassasdor_perks_image {
   		background-position: 745px;
    }
  }
  .ambassador_apply_now
  {
    
  display: flex;
    background: linear-gradient(#f59517,#f1b52b);
    text-align: center;
    margin: auto;
    padding: 15px;
    color: #fff;
    justify-content: center;
    /* margin: 15px; */
    border-radius: 9px; 
    font-size:16px;
 
  }
    
  .QS_app_tick
  {
    color:#4ebe00;
    width:38px; 
  }
  .QS_ambassadorperks_section_points li {
   	padding:10px 0;  
   	display:flex;
    font-size:18px;
  } 
  
  .QS_ambassadorperks_section_points {
    padding:20px;
  	 padding:60px 20px; 
    text-align:left;
  }


</style>

{% schema %}
  {
    "name": "Perks Section",
    "settings": [
 {
          "type": "image_picker",
          "id": "image",
          "label": {
           
            "en": " Image"
           
          }
        },
    {
          "type": "text",
          "id": "heading",
          "label": {
                   "en": "Tag"
              },
          "default": {
                   "en": "Perks of Being an Ambassador"
              }
        },
		{
          "type": "textarea",
          "id": "description",
          "label": {
                   "en": "Description"
              }
          
        }
		
 		

]
  }
{% endschema %}



