{% assign list_ID = section.settings.list_ID %}

<!-- For Background Section Image -->
{% assign section_image = section.settings.image | img_url: '1200x' %}
{% assign section_image_completed = section.settings.image--completed | img_url: '1200x' %}
{% assign pattern_image = section.settings.pattern_image| img_url: '2880x' %}

<div class="survey-message survey-message--pre show" style="background-image: url({{section_image}});">
  <div class="page-width home-title-mobile">
    <div class="col-md-6 col-sm-12">
      <div class="survey__content">
        <h1 class="survey__title">{{ section.settings.heading }}</h1>
        <p>{{ section.settings.description }}</p>
      
        <a href="#survey" class="button button-yellow">{{ section.settings.button_label }}</a>
      </div>
    </div>
    <div class="col-md-6 col-sm-12"></div>
  </div>
</div>

<div class="survey-message survey-message--post" style="background-image: url({{section_image_completed}});">
  <div class="page-width home-title-mobile">
    <div class="col-md-6 col-sm-12"></div>
    <div class="col-md-6 col-sm-12">
      <div class="survey__content">
        <h1 class="survey__title">{{ section.settings.heading_complete }}</h1>
        <p>{{ section.settings.description_complete }}</p>
      </div>
    </div>
  </div>
</div>

<div id="survey" class="survey" style="background-image: url({{pattern_image}}); background-size: contain; background-repeat: no-repeat; background-position: center;">
  <div class="page-width">
    <div class="col-md-12">

      <form id="survey__form" class="survey__form klaviyo_gdpr_embed_{{ list_ID }}" method="GET" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" novalidate="novalidate" target="_blank">
        
        <input type="hidden" name="g" value="{{ list_ID }}">
        <input type="hidden" name="$fields" value="Dog Age,Breed,Health Issues,Selection Factor,$consent, Street Number, Street Name, Postal Code, State/Province, Country">

        <div class="stepCounter">
          <div class="card__wrapper">
            <ul class="h3">
              <li id="step1" class="survey__step active">1</li>
              <li id="step2" class="survey__step">2</li>
              <li id="step3" class="survey__step">3</li>
              <li id="step4" class="survey__step">4</li>
            </ul>
          </div>
        </div>
        <div id="card1" class="survey__card active">
          <h3>How Old is Your Dog?</h3>
          <p>Please provide answer in years.</p>
          <div class="card__wrapper">
            <div class="fieldset">
              <label class="visually-hidden" for="age">Age</label>
              <select name="Dog Age" id="age" required>
                <option value="">Age --</option>
                {% for i in (1..20) %}
                  <option value="{{ i }}">{{ i }}</option>
                {% endfor %}
              </select>
            </div>
            <input class="button-yellow" type="button" value="Go to the Next Question"  data-advance-step disabled>
          </div>
        </div>
        
        <div id="card2" class="survey__card">
          <h3>Tell us your dog's breed</h3>
          <p>Select from the list in the dropdown below.</p>
          <div class="card__wrapper">
            <div class="fieldset">
              <label class="visually-hidden" for="breed">Breed Name</label>
              <select name="Breed" id="breed" required>
                <option value="">Breed Name --</option>
                {% for dog in dogs %}
                  <option value="{{ dog }}">{{ dog }}</option>
                {% endfor %}
              </select>
            </div>
            <input class="button-yellow" type="button" value="Go to the Next Question"  data-advance-step disabled>
          </div>
        </div>
        
        <div id="card3" class="survey__card">
          <h3>Does your dog have any health issues?</h3>
          <p>Select all that apply.</p>
          <div class="fieldset options">
            {% for issue in health %}
              <input type="checkbox" name="Health Issues" id="{{ issue }}" class="visually-hidden" value="{{ issue }}">
              <label for="{{ issue }}">{{ issue }}</label>
            {% endfor %}
          </div>
          <div class="card__wrapper">
            <input class="button-yellow" type="button" value="Go to the Next Question"  data-advance-step disabled>
          </div>
        </div>
        
        <div id="card4" class="survey__card">
          <h3>What is the most important factor to you when selecting products for your pet?</h3>
          <div class="fieldset options">
            <input type="radio" name="Selection Factor" id="ingredients" class="visually-hidden" value="Ingredients">
            <label for="ingredients">Ingredients</label>
            <input type="radio" name="Selection Factor" id="price" class="visually-hidden" value="Price">
            <label for="price">Price</label>
            <input type="radio" name="Selection Factor" id="convenience" class="visually-hidden" value="Convenience">
            <label for="convenience">Convenience</label>
          </div>
          <div class="card__wrapper">
            <input class="button-yellow" type="button" value="Go to the Next Question"  data-advance-step disabled>
          </div>
        </div>
        
        <div id="card5" class="survey__card">
          <div class="card__wrapper">
            <h3>Lastly, please provide us with some important info...</h3>
            <div class="fieldset important-info">
              <label class="visually-hidden" for="first_name">First Name</label>
              <input type="text" name="first_name" id="first_name" placeholder="First Name --" required>
              
              <label class="visually-hidden" for="last_name">Last Name</label>
              <input type="text" name="last_name" id="last_name" placeholder="Last Name --" required>
              
              <label class="visually-hidden" for="k_id_email">Email</label>
              <input type="email" name="email" id="k_id_email" placeholder="Email --" required>

              <h4>Shipping Address</h4>

              <label class="visually-hidden" for="street_number">Street Number</label>
              <input type="text" name="Street Number" id="street_number" placeholder="Street Number --" required>
              
              <label class="visually-hidden" for="street_name">Street Name</label>
              <input type="text" name="Street Name" id="street_name" placeholder="Street Name --" required>
              
              <label class="visually-hidden" for="postal_code">Zip/Postal Code</label>
              <input type="text" name="Postal Code" id="postal_code" placeholder="Zip/Postal Code --" required>
              
              <label class="visually-hidden" for="state_province">State/Province</label>
              <input type="text" name="State/Province" id="state_province" placeholder="State/Province --" required>
              
              <label class="visually-hidden" for="country">Country</label>
              <input type="text" name="Country" id="country" placeholder="Country --" required>
            </div>
          </div>
          <div class="fieldset subscribe">
            <input type="checkbox" name="$consent" id="consent-email" value="email" checked required>
            <label for="consent-email">Keep me up to date with the latest from Vet Naturals</label>
          </div>
          <div class="card__wrapper">
            <button type="submit" class="button-yellow" disabled>Submit</button>
          </div>
          {% if section.settings.survey_whitelist %}
            <div class="card__wrapper rte whitelist">{{ section.settings.survey_whitelist }}</div>
          {% endif %}
        </div>
        
        <div id="card6" class="survey__card">
          <h3>{{ section.settings.survey_complete_cta }}</h3>
          {% unless section.settings.survey_complete_image == blank %}
            <img src="{{ section.settings.survey_complete_image | img_url: '500x500' }}" alt="">
          {% endunless %}
          <a href="{{ section.settings.survey_complete_url }}" class="button button-yellow">Go to full Product Page</a>
        </div>
      </form>
    </div>
  </div>
</div>

{% if section.settings.survey_consent_alert %}
  <script>
    $(function() {
      var $consent = $("#consent-email");
      $consent.on('change', function() { 
        if (!$consent.is(':checked')) {
          alert("{{ section.settings.survey_consent_alert }}");
        }
      })
    }) 
  </script>
{% endif %}

